<Window x:Class="WebSocketServerExample.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="SuperviFlumes" Height="665" Width="1038">
    <Grid Margin="0,0,33,12">

        <Grid.RowDefinitions>
            <RowDefinition Height="Auto" MinHeight="89.96"/>
            <RowDefinition Height="87*"/>
            <RowDefinition Height="2*"/>
            <RowDefinition Height="32*"/>
            <RowDefinition Height="250*"/>
            <RowDefinition Height="Auto" MinHeight="155.08"/>
        </Grid.RowDefinitions>

        <StackPanel Grid.Row="0" Orientation="Horizontal" Margin="5,5,5,55">
            <Button x:Name="StartServerButton" Content="Start Server" Click="StartServerButton_Click" Margin="5" Height="30"/>
            <Button x:Name="StopServerButton" Content="Stop Server" Click="StopServerButton_Click" Height="30"/>
            <Label x:Name="ServerStatusLabel" Content="Server status" Height="29"/>
        </StackPanel>

        <DataGrid Grid.Row="1" x:Name="AquariumsDataGrid" AutoGenerateColumns="False" ItemsSource="{Binding aquariums, Mode=OneWay}" Margin="5,5,0,10" Grid.RowSpan="4" HorizontalAlignment="Left" Width="660">
            <DataGrid.Columns>
                <DataGridTextColumn Header="ID" Binding="{Binding ID}"/>
                <DataGridTextColumn Header="PLCID" Binding="{Binding PLCID}"/>
                <DataGridTextColumn Header="Debit" Binding="{Binding debit}"/>
                <DataGridTextColumn Header="Température" Binding="{Binding temperature}"/>
                <DataGridTextColumn Header="02 %" Binding="{Binding oxy}"/>
                <DataGridTextColumn Header="02 mg/L" Binding="{Binding oxymgl, StringFormat=N2}"/>
                <!-- Add more columns as needed -->
            </DataGrid.Columns>
        </DataGrid>

        <ScrollViewer x:Name="MessageScrollViewer" Grid.Row="5" Margin="10,6,10,10" Height="150">
            <TextBox x:Name="MessageTextBox" IsReadOnly="True" TextWrapping="Wrap" />
        </ScrollViewer>
        <Button x:Name="sensorCalibrationButton" Content="Sensor Calibration" Click="sensorCalibrationButton_Click" Margin="10,50,855,20"/>
        <StackPanel Grid.Row="1" Margin="684,0,0,16" Grid.RowSpan="3">
            <Label x:Name="lbl_TimeInSitu" Content="InSitu Data" FontWeight="Bold" FontSize="14"/>
            <Label x:Name="lbl_TempInSitu" Content="Temperature: "/>
            <Label x:Name="lbl_OxyInSitu" Content="Oxygen Saturation: "/>
            <Label x:Name="lbl_SalinityInSitu" Content="Salinity: "/>
        </StackPanel>
        <Label x:Name="lbl_TimeInSitu_Copy" Content="SETPOINTS" FontWeight="Bold" FontSize="14" Margin="684,33,0,188" Grid.Row="4"/>
        <ComboBox x:Name="cbAquaNumber" HorizontalAlignment="Left" Margin="784,69,0,0" VerticalAlignment="Top" Width="77" Grid.Row="4" SelectionChanged="cbAquaNumber_SelectionChanged">
            <ComboBoxItem Content="1"/>
            <ComboBoxItem Content="2"/>
            <ComboBoxItem Content="3"/>
            <ComboBoxItem Content="4"/>
            <ComboBoxItem Content="5"/>
            <ComboBoxItem Content="6"/>
            <ComboBoxItem Content="7"/>
            <ComboBoxItem Content="8"/>
            <ComboBoxItem Content="9"/>
            <ComboBoxItem Content="10"/>
            <ComboBoxItem Content="11"/>
            <ComboBoxItem Content="12"/>
            <ComboBoxItem Content="13"/>
            <ComboBoxItem Content="14"/>
            <ComboBoxItem Content="15"/>
            <ComboBoxItem Content="16"/>
            <ComboBoxItem Content="17"/>
            <ComboBoxItem Content="18"/>
            <ComboBoxItem Content="19"/>
            <ComboBoxItem Content="20"/>
            <ComboBoxItem Content="21"/>
            <ComboBoxItem Content="22"/>
            <ComboBoxItem Content="23"/>
            <ComboBoxItem Content="24"/>
        </ComboBox>
        <Label Content="Tank number" HorizontalAlignment="Left" Margin="693,65,0,0" VerticalAlignment="Top" Grid.Row="4"/>
        <Label Content="Temperature offset: " HorizontalAlignment="Left" Margin="693,99,0,0" VerticalAlignment="Top" Grid.Row="4"/>
        <TextBox x:Name="tb_TempSetpoint" HorizontalAlignment="Left" Margin="827,103,0,0" Grid.Row="4" TextWrapping="Wrap" VerticalAlignment="Top" Width="80" Height="22"/>
        <Button Content="Submit" HorizontalAlignment="Left" Margin="920,100,0,0" Grid.Row="4" VerticalAlignment="Top" Height="28" Width="64" Click="Button_Click"/>

    </Grid>
</Window>
